###############################################################################
# COMPILERS                                                                   #
###############################################################################

# definisce la macro CPPC
ifndef CPPC
	CPPC=g++
endif

###############################################################################
# BUILD                                                                       #
###############################################################################

SRC = $(APP).cpp ../mpui.cpp ../mpui_hub.cpp ../mpui_sck.cpp
BIN = $(APP).o mpui.o mpui_hub.o mpui_sck.o
EXE = $(APP)

default:$(EXE)

$(EXE): $(BIN)
	$(CPPC) $^ -lGL -lGLU -lglut -o $@ -O3 -fopenmp

$(BIN): $(SRC)
	$(CPPC) $^ -D __MPUI_HUB__ -c -O3 -fopenmp

###############################################################################
# EXECUTION                                                                   #
###############################################################################

run:
	./$(EXE)

run_mpui_source:
	./$(EXE)

run_mpui_hub:
	python3 ../mpui_cin.py | ./$(EXE)

###############################################################################
# CLEAN                                                                       #
###############################################################################

clean:
	rm -f *.o $(EXE)

wipe:
	rm -f *.o
