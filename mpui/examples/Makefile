###############################################################################
# COMPILERS                                                                   #
###############################################################################

# definisce la macro CPPC
ifndef CPPC
	CPPC=g++
endif

###############################################################################
# BUILD                                                                       #
###############################################################################

SRC = $(APP).cpp ../mpui.cpp ../mpui_hub.cpp
BIN = $(APP).o mpui.o mpui_hub.o
EXE = $(APP)

default:$(EXE)

$(EXE): $(BIN)
	$(CPPC) $^ -lGL -lGLU -lglut -o $@ -O3 -fopenmp

$(BIN): $(SRC)
	$(CPPC) $^ -lGL -lGLU -lglut -c -O3 -fopenmp

###############################################################################
# EXECUTION                                                                   #
###############################################################################

run:
	./$(EXE)

###############################################################################
# CLEAN                                                                       #
###############################################################################

clean:
	rm -f *.o $(EXE)

wipe:
	rm -f *.o
